<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <section id='flash-message'>
    <% flash.each do |type, message| %>
        <p><%= message %></p>
    <% end %>
    </section>
    <%= yield %>
  </body>
</html>
