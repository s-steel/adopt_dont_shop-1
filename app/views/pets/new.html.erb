<h1>Add a New Adoptable Pet</h1>

<%= form_tag("/shelters/#{@shelter_id}/pets", method: :post) do %>
  <%= label_tag "Name" %>
  <%= text_field_tag :name %>

  <%= label_tag "Image" %>
  <%= text_field_tag :image %>

  <%= label_tag "Description" %>
  <%= text_field_tag :description %>

  <%= label_tag "Age" %>
  <%= text_field_tag :approximate_age %>

  <%= label_tag "Sex" %>
  <%= text_field_tag :sex %>
  
  <%= submit_tag("Add Pet") %>
<% end %>
